<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>To Do List app</title>
    <!--BootstrapV5-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!--Google FontAwesome-->
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed&family=Comfortaa&family=Imperial+Script&family=Roboto:ital,wght@0,300;0,400;0,700;1,900&family=Work+Sans:ital,wght@0,100;0,200;0,600;0,800;1,300;1,400;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
</head>

<body>
<nav class="navbar navbar-light navbar-fixed-top" style="background-color: #e3f2fd;" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('homepage') }}">To Do List app</a>
            <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" />
        </div>
    </div>
</nav>

<!-- Page Content -->
<div class="container">
    <div class="col-md-12">
        {#{% if  is_granted('ROLE_ADMIN') %}#}
            <div class="col-md-8">
                {#<a href="#" class="btn btn-info">Liste des utilisateurs</a>#}
                {#<a href="#" class="btn btn-primary">Créer un utilisateur</a>#}
            </div>
        {#{% endif %}#}

        {#{% if app.user %}#}
            <div class="d-flex flex-row-reverse mt-3 mb-1">
                <a href="#" class="col-md-3 btn btn-danger" style="width:145px">Se déconnecter</a>
            </div>
        {#{% endif %}#}

        {#{% if not app.user and 'login' != app.request.attributes.get('_route') %}#}
            {#<a href="#" class="col-md-3 btn btn-success">Se connecter</a>#}
        {#{% endif %}#}
    </div>

    <div class="row">
        <div class="col-md-12">
            {#{% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">
                    <strong>Superbe !</strong> {{ flash_message }}
                </div>
            {% endfor %}

            {% for flash_message in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    <strong>Oops !</strong> {{ flash_message }}
                </div>
            {% endfor %}#}

            {% block header_title %}{% endblock %}
            {% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">{% endblock %}
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
<!-- /.container -->

<div class="container">
    <hr>
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; OpenClassrooms</p>
            </div>
        </div>
    </footer>
</div>
<script src="https://kit.fontawesome.com/613a25ab47.js" crossorigin="anonymous"></script>
