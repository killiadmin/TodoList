{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="d-flex flex-column">
        <div class="d-flex flex-row">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }} <a href="{{ path('app_logout') }}"></a>
                </div>
            {% endif %}
            <label for="username" class="w-25 text-center align-content-center">Username</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control w-50"
                   autocomplete="username" required autofocus>
            <label for="password" class="w-25 text-center align-content-center">Password</label>
            <input type="password" name="_password" id="password" class="form-control w-50 me-3"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-success" type="submit" style="width:290px;">
                Log in
            </button>
        </div>
        {% if error %}
            <div class="alert alert-danger w-50 mx-auto mt-3">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
    </form>
{% endblock %}
