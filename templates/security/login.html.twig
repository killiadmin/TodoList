{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="d-flex flex-column">
        {% if app.user %}
            <div class=" d-flex justify-content-center mb-4">
                Vous êtes connecté en tant que {{ app.user.username }} <a href="{{ path('app_logout') }}"></a>
            </div>
        {% endif %}
        <div class="d-flex flex-row">
            <label for="username" class="w-25 text-center align-content-center">Nom d'utilisateur</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control w-50"
                   autocomplete="username" required autofocus>
            <label for="password" class="w-25 text-center align-content-center">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control w-50 me-3"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-success" type="submit" style="width:290px;">
                Se connecter
            </button>
        </div>
        {% if error %}
            <div class="alert alert-danger w-50 mx-auto mt-3">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
    </form>
{% endblock %}
