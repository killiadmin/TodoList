{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="text-center">Modifier <strong>{{ user.username }}</strong></h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id}), 'attr': {'class': 'w-50 mx-auto'}}) }}
            {{ form_row(form.username) }}
            <div class="mt-2"></div>
            {{ form_row(form.email) }}
            <div class="mt-2"></div>
            {{ form_row(form.roles) }}
            <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-success pull-right mt-3">Modifier</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
